<view class="page">
    <view class="ye">余额 (元)</view>
    <view class="je">{{balance}}</view>
    <view class="tx" bindtap="showModal" data-target="DialogModal1">提现</view>
    <view class="jl" bindtap="toRecord">提现明细</view>

    <form bindsubmit="formSubmit" class="" reportSubmit="true">
      <view class="cu-modal {{modalName=='DialogModal1'?'show':''}}">
              <view class="cu-dialog">
                  <view class="padding-sm">
                      <view class="cu-form-group">
                          <view class="title" type="number" style="margin-right: 80rpx;">提现金额 ：</view>
                          <input name="amount" placeholder="" type="number"></input>
                          <view class="cu-btn bg-gray ">元</view>
                      </view>
                  </view>
                  <view class="cu-bar bg-white justify-end">
                      <view class="action">
                          <button bindtap="hideModal" class="cu-btn line-blue text-blue" style="width: 120rpx; margin-right: 20rpx;">取消</button>
                          <button class="cu-btn bg-blue" formType="submit" style="width: 120rpx; margin-right: 5rpx;">确定</button>
                      </view>
                  </view>
              </view>
          </view>
        </form>
</view>
