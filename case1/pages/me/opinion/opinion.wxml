<view class="page">
    <view class="padding bg-white margin-bottom">
        <view class="flex flex-wrap">
            <view class="basis-ql text-df padding-sm solid-bottom">
                <view class="title text-blue" style="font-size: 32rpx; margin-bottom: 20rpx; display: flex; justify-content: space-between;">
                    <view>意见反馈： </view>
                    <view>{{currentWord}} / 200</view>
                </view>
                <form bindsubmit="bindFormSubmit">
                    <textarea placeholder="请输入您的意见" name="textarea" maxlength="200" bindinput='limitWord' style="height: 450rpx; font-size: 30rpx;"/>
                    <button style="background-color: #346df0;" class="text-white" form-type="submit"> 提交 </button>
                </form>
            </view>
        </view>
    </view> 
</view>